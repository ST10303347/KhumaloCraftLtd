@model KhumaloCraftLtd.Models.ProductModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<h4 style="text-align:center">@Model.productName</h4>
<div class="container" style="background-color: rgba(138, 129, 133, 0.6); margin-top: 50px; margin-bottom: 50px; padding: 20px; border-radius:10px;">
    <div class="row">
        <div class="col col-xs-6 col-lg-5">
            <img src="~/Images/@Model.ImagePath" style="width: 100%; max-height: 60vh;" />
        </div>
        <div class="col col-xs-6 col-lg-7">
            <div>@Model.Description</div>
            <h3>Remaining stock : @Model.Availability</h3>
            @if (User.Identity.IsAuthenticated && userManager.GetUserId(User) == Model.User.Id)
            {

               
                <form asp-action="AddStock" method="post">
                    <input type="hidden" name="id" class="form-control" value="@Model.Id" />
                        <label for="quantity">Quantity:</label>
                        <input type="number" name="Quantity" min="1" step="1" class="form-control" value="1" required />
                        <input type="submit" value="Add stock" class="btn btn-primary" />


                   </form>}
 else if(User.Identity.IsAuthenticated)
            {
                <form  asp-action="Purchase" method="post">
                    <div>
                       
                        <input type="hidden" name="IdentityUserId" class="form-control" value="@userManager.GetUserId(User)"/>
                        <input type="hidden" name="ProductId" class="form-control" value="@Model.Id" />
                        <label for="quantity">Quantity:</label>
                        <input type="number"  name="Quantity" min="1" max="@Model.Availability" step="1" class="form-control" value="1" required />
                        @if (Model.Availability > 0)
                        {
                            <input type="submit" value="Buy" class="btn btn-primary" />
                        }
                        else {<h3>Out of Stock!</h3> }
                    </div>
                </form>
                  
            }

            else
            {
                
            <div>
                <h4>Log in to place order.</h4>
              
             
                <button onclick="window.location.href='/Identity/Account/Login'" style="padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer;">
                    Go to Login Page
                </button>
               
            </div>




            }
            
            
            <div>
                
                <a asp-action="Index">Back to List</a>
            </div>
